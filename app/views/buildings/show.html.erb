<p>
    <span class="bold">物件名：</span>
    <%= @building.name %>
</p>
<p>    
    <span class="bold">賃料：</span>
    <%= @building.rent %>円
</p>
<p>
    <span class="bold">住所：</span>
    <%= @building.address %>
</p>
<p>    
    <span class="bold">築年数</span>
    <%= @building.age %>年
</p>
<p>    
    <span class="bold">備考</span>
    <%= @building.note %>
</p>
<hr>
<% n = 0 %>
<% @near_stations.each do |near_station| %>
    <h4>
        最寄り駅
        <%= n += 1 %>
    </h4>
    <p>
        <span class="bold">路線名</span>
        <%= near_station.track_name%>
    </p>
    <p>
        <span class="bold">駅名</span>
        <%= near_station.station_name%>
    </p>
    <p>
        <span class="bold">徒歩分数</span>
        <%= near_station.minute_walk%>
    </p>
<% end %>
<%= link_to '編集', edit_building_path(@building.id) %> | <%= link_to '戻る', buildings_path %>