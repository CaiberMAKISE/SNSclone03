<%= form_with(model: @building, local: true) do |f| %>
    <%= f.label :name, '物件名' %><br>
    <%= f.text_field :name %><br>
    <%= f.label :rent, '賃料' %><br>
    <%= f.text_field :rent %>円<br>
    <%= f.label :address, '住所' %><br>
    <%= f.text_field :address %><br>
    <%= f.label :age, '築年数' %><br>
    <%= f.text_field :age %>年<br>
    <%= f.label :note, '備考' %><br>
    <%= f.text_area :note %><br>
    <hr>
    <% n = 0 %>
    <%= f.fields_for :near_stations do |station_f| %>
        <h4>
            最寄り駅<%= n += 1 %>
        </h4>
        <%= station_f.label :track_name, '路線名' %><br>
        <%= station_f.text_field :track_name %><br>
        <%= station_f.label :station_name, '駅名' %><br>
        <%= station_f.text_field :station_name %><br>
        <%= station_f.label :minute_walk, '徒歩分数' %><br>
        <%= station_f.text_field :minute_walk %>分<br>
    <% end %>
    <%= f.submit '登録する' %>
<% end %>