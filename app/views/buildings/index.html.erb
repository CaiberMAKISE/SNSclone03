<div class="container">
    <h1>物件一覧</h1>
    <table>
        <tr>
            <th>物件名</th>
            <th>賃料</th>
            <th>住所</th>
            <th>築年数</th>
            <th>備考</th>
            <th colspan="3"></th>
        </tr>
        <% @buildings.each do |building| %>
        <tr>
            <td><%= building.name %></td>
            <td><%= building.rent %>円</td>
            <td><%= building.adress %></td>
            <td><%= building.age %>年</td>
            <td><%= building.note %></td>
            <td><%= link_to '詳細', building_path(building.id) %></td>
            <td><%= link_to '編集', edit_building_path(building.id) %></td>
            <td><%= link_to '削除', building_path(building.id), method: :delete %></td>
        </tr>
        <% end %>
    </table>
    <br><br>
    <%= link_to '物件を登録する', new_building_path %>
</div>